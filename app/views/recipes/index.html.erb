<h1>All recipes</h1>
<%@recipes.each do |r|%>
  <ul>
    <li>Recipe name:<%=link_to r.name, recipe_path(r)%> =>recipe_id:<%= r.id%></li>
    <% if r.ingredients.any?%>
      <%r.ingredients.each do |ing|%>
        <li>Ingredients: <%= ing.list%></li>
      <% end %>
    <% else%>
      <li>Ingredients: <%= link_to 'add ingredient', new_ingredient_path%></li>
    <%end%>
    <% if r.recipe_type.nil?%>
      <li>Recipe type: <%= link_to 'add recipe type', new_recipe_type_path%></li>
    <% else%>
      <%rt = RecipeType.find_by(recipe_id: r.id)%>
      <li>Recipe type: <%= rt.recipe_type%></li>
    <%end%>
  </ul>
<%end%>
<h2>
  <%= link_to 'Add new recipe', new_recipe_path%> 
</h2>
